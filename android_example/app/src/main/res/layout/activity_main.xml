<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp" />

    </ScrollView>

    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnTestLarkBot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试 Lark Bot" />

        <Button
            android:id="@+id/btnTestLarkBotImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试 Lark Bot 图片" />

        <Button
            android:id="@+id/btnTestLarkCustomBot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试 Lark Custom Bot" />

        <Button
            android:id="@+id/btnTestOSSUpload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试 OSS 上传" />

        <Button
            android:id="@+id/btnTestOSSDownload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试 OSS 下载" />

        <Button
            android:id="@+id/btnTestOSSList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试 OSS 列表" />

        <Button
            android:id="@+id/btnTestOSSDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试 OSS 删除" />

        <Button
            android:id="@+id/btnTestOpenAI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试 OpenAI 聊天" />

    </LinearLayout>

</LinearLayout>